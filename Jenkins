pipeline {
    agent {
      dockerfile true
      args '-u root:root'
    }
    stages {
        stage('Deploy') {
            steps {
                withCredentials([file(credentialsId: 'fake-jenkins-sa', variable: 'GC_KEY')]) {
                  sh("gcloud auth activate-service-account --key-file=${GC_KEY}")
                  sh("gcloud config get-value account")
                }
            }
        }
    }
}